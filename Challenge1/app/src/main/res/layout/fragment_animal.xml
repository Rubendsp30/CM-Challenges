<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_animal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="@string/title_animals"
                android:textSize="25sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Button 1 -->
                    <Spinner
                        android:id="@+id/animal_spinner"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:entries="@array/animal_options"
                        app:layout_constraintBottom_toTopOf="@+id/animal_avatar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="80dp"/>

                    <ImageView
                        android:id="@+id/animal_avatar"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:contentDescription="@string/animal_img"
                        android:scaleType="centerCrop"
                        android:src="@drawable/frog"
                        app:layout_constraintDimensionRatio="1:1"
                        tools:layout_editor_absoluteX="55dp"
                        tools:layout_editor_absoluteY="412dp"
                        app:layout_constraintBottom_toTopOf="@+id/animal_info_table"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"/>

                    <!-- Button 2 -->
                    <TableLayout
                        android:id="@+id/animal_info_table"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/animal_avatar">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/owner_label_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="@string/owner_label"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/display_owner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:textSize="20sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/name_label_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="@string/name_label"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/display_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:textSize="20sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/age_label_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:text="@string/age_label"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/display_age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:textSize="20sp" />
                        </TableRow>
                    </TableLayout>


                    <!-- Button 3 -->
                    <Button
                        android:id="@+id/edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        app:cornerRadius="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/animal_info_table" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>